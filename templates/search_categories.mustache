<div id="country-search-wrapper">

    <ol class="breadcrumb">
        {{# breads }}
            {{# active }}
                <li class="active">
                    {{ title }}
                </li>
            {{/active}}
            {{^ active }}
                <li>
                    <a href="{{ link }}">{{ title }}</a>
                </li>
            {{/active}}

        {{/ breads }}
    </ol>

    {{# have_results }}

    <p>{{& top_text }}</p>

    {{^ layout_articles }}
        <!-- Normal layout for categories -->
        <ul class="primary-list-block">
            {{# categories }}
                <li>
                    <i class="glyphicon glyphicon-{{ icon }}"></i>
                    <a href="{{ link }}">
                        {{ title }}
                    </a>
                    {{# desc }}
                        <span class="text-muted">{{ . }}</span>
                    {{/ desc}}
                </li>
            {{/ categories }}
        </ul>
    {{/ layout_articles}}
    {{# layout_articles }}
        <!-- Special layout for articles -->
        <div class="row" id="panel-categories-articles-items">
            {{# categories }}
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <i class="glyphicon glyphicon-file pull-left"></i>
                            <a href="{{ link }}">{{ title }}</a>
                        </div>
                        <div class="panel-heading">
                            <i class="glyphicon glyphicon-map-marker pull-left"></i>
                            {{& location_text }}
                        </div>
                        <div class="panel-body">
                            {{# desc }}{{ . }}{{/ desc }}
                            {{^ desc }}â€”{{/ desc}}
                        </div>
                    </div>
                </div>
            {{/ categories }}
        </div>
    {{/layout_articles}}

    {{/ have_results }}
    {{^ have_results }}
        <p>{{ _ "settlegeocategories-no-results" }}</p>
    {{/ have_results }}

</div>